[core]
	pager = less -FRX
	ignorecase = false
	excludesFile = .dotfiles/git/.gitignore_global
[alias]
	glog = log --all --decorate --oneline --graph
	llog = log  --date=human --pretty=format:'%C(Yellow)%<(10)%h%C(reset)%C(Green)%<(15)%ad%C(reset) %C(Cyan)%<(15)%an%C(reset) %s%C(Red)%d%C(reset)'
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	ff = only
[init]
	defaultBranch = main
